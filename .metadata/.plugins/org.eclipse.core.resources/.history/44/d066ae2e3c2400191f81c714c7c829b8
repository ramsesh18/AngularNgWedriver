package elements;

import org.openqa.selenium.WebDriver;


public class DropDownLists {
	WebDriver driver;
	FindElementIdentifierUsingNgOptions findelementidentifierusingngoptions;
	
	public DropDownLists(WebDriver driver){
		   /** Creating an instance **/
			this.driver = driver;
			this.findelementidentifierusingngoptions = new FindElementIdentifierUsingNgOptions(driver);
	}
	
	/** Below method is used to check if the checkbox is Enabled**/
	public void selectASpecificValueFromTheList(String dropDownValue){
		findelementidentifierusingngoptions.findElementUsingBinding(dropDownValue);
	}

}
